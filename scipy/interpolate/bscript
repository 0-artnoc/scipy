from bento.commands import hooks

@hooks.pre_build()
def pre_build(context):
    bld = context.waf_context

    def builder(extension):
        bld(features="c pyext bento cshlib",
            source=extension.sources,
            target=extension.name,
            use="fitpack FBLAS CLIB")
    context.register_builder("_fitpack", builder)
    context.register_builder("interpnd", builder)

    def builder(extension):
        bld(features="c pyext bento cshlib f2py",
            source=extension.sources,
            target=extension.name,
            use="fitpack FBLAS CLIB")
    context.register_builder("dfitpack", builder)

    def builder(extension):
        bld(features="cxx pyext bento cxxshlib",
            source=extension.sources,
            target=extension.name,
            use="FBLAS CLIB")
    context.register_builder("_interpolate", builder)
