import sys

from bento.commands import hooks

@hooks.pre_build
def pre_build(context):
    bld = context.waf_context

    def builder(extension):
        bld(features="c pyext bento cloadable",
            source=extension.sources,
            target=extension.name,
            use="superlu_src FLAPACK")
    context.register_builder("_superlu", builder)

    def builder(extension):
        bld(features="c bento cstlib",
            source=extension.sources,
            target=extension.name,
            defines=["USE_VENDOR_BLAS=2"])
    context.register_compiled_library_builder("superlu_src", builder)
